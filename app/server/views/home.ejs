<script>

    var answer = <%- JSON.stringify(correct) %>;
    function checkAnswer()
    {
        var choice = $('input[type=radio]:checked', '#myForm').val();

        document.getElementById("noshow").style.visibility = "visible";
        answerId = answer.substring(6,7).charCodeAt(0)-64;
        if (parseInt(choice) == answerId ){
               document.getElementById("result").innerText = "You got it right !!!";
        }
        else{
            var txt = document.getElementById("optionsRadios"+answerId).innerHTML;
            document.getElementById("result").innerText ="Sorry, the right answer is:   ("+ (answer.substring(6,7).charCodeAt(0)-64)+") "+ txt ;
        }

    }

